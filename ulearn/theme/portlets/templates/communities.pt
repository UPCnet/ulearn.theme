<div id="box_comunitats" class="ulearnbox"
      i18n:domain="ulearn">

<div class="osomcorner-wrapper"><div class="osomcorner"></div></div>

<h2 i18n:translate="communities">Comunidades</h2>

<nav class="subnavbar">
  <ul class="nav nav-pills nav-stacked" role="menu">
    <li role="menuitem"
        tal:repeat="community view/getCommunities">
          <div class="bubble right pull-right">
            <div class="arrow"></div>
            <div class="bubble-content">
              <a href="#"
                 tal:attributes="href community/getURL"
                 tal:content="python:view.getCommunityMembers(community)">
                23
              </a>
            </div>
          </div>
          <a href="#"
             rel="tooltip" data-placement="right" title="Community title not trimmed"
             tal:attributes="href community/getURL;
                             title community/Title">
              <tal:community content="python:view.get_community_title(community.Title)">
                Community
              </tal:community>
          </a>
    </li>
  </ul>
</nav>

<div id="addModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button class="close" type="button" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel" i18n:translate="createcommunity">Create a new community</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
</div>

<ul class="communitylinks"
    tal:define="campus_url view/get_campus_url">
  <li>
    <a tal:attributes="href string:${view/portal_url}/communities">
      <i class="icon-plus-sign icons"> </i>
      <tal:seemore i18n:translate="seemore">See more communities</tal:seemore>
    </a>
  </li>
  <li>
    <a tal:condition="campus_url"
       tal:attributes="href campus_url">
      <i class="icon-plus-sign icons"> </i>
      <tal:gotocampus i18n:translate="gotocampus">Go to the campus</tal:gotocampus>
    </a>
  </li>
</ul>

<tal:showcreate condition="view/showCreateCommunity">
  <button class="btn btn-large btn-comunitat"
          type="button"
          data-remote="addCommunity" data-toggle="modal" data-target="#addModal">
            <i class="fa-icon-group"></i>
            <tal:createcommunity i18n:translate="createcommunity">Create a new community</tal:createcommunity>
  </button>
</tal:showcreate>

</div>
