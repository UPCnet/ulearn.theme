<div id="box_comunitats" class="ulearnbox">

<h2>Comunidades</h2>

<nav class="subnavbar">
  <ul class="nav nav-pills nav-stacked" role="menu">
    <li role="menuitem"
        tal:repeat="community view/getCommunities">
          <div class="bubble right pull-right">
            <div class="arrow"></div>
            <div class="bubble-content">
              <a href="#"
                 tal:attributes="href community/getURL"
                 tal:content="python:view.getCommunityMembers(community)">
                23
              </a>
            </div>
          </div>
          <a href="#"
             tal:attributes="href community/getURL">
              <tal:community content="community/Title">
                Community
              </tal:community>
          </a>
    </li>
  </ul>
</nav>

<p>
  <a tal:attributes="href string:${view/portal_url}/communities">
    <span class="icon-plus-sign icons"> </span>Ver más
  </a>
</p>

<p tal:condition="view/showCreateCommunity">
  <button class="btn btn-large btn-comunitat"
          type="button"
          data-remote="addCommunity" data-toggle="modal" data-target="#addModal">
            Crea una nueva comunidad
  </button>
</p>

<p tal:condition="view/showEditCommunity">
  <button class="btn btn-large btn-comunitat"
          type="button"
          data-toggle="modal" data-remote="editCommunity" data-target="#editModal">
            Edita la comunidad
  </button>
</p>

<div id="addModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button class="close" type="button" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Crea una nueva comunidad</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
</div>

<div id="editModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="editModalLabel">Edita la comunidad</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
</div>

</div>
