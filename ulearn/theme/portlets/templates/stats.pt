<tal:iscommunity tal:define="is_community view/community_mode">
<div id="box_stats" class="ulearnbox"
     i18n:domain="ulearn">

    <div class="osomcorner-wrapper"><div class="osomcorner"></div></div>

    <h2 i18n:translate="stats">Stats</h2>

    <ul class="nav nav-pills nav-stacked"
        tal:condition="is_community">
      <li>
        <div class="bubble left pull-left">
          <div class="arrow"></div>
          <div class="bubble-content">
            <tal:docs content="python:view.get_stats_for('documents')">
              240
            </tal:docs>
          </div>
        </div>
        <p i18n:translate="Documents">
          Documents
        </p>
      </li>
      <li>
        <div class="bubble left pull-left">
          <div class="arrow"></div>
          <div class="bubble-content">
            <tal:docs content="python:view.get_stats_for('links')">
              240
            </tal:docs>
          </div>
        </div>
        <p i18n:translate="Links">
          Links
        </p>
      </li>
      <li>
        <div class="bubble left pull-left">
          <div class="arrow"></div>
          <div class="bubble-content">
            <tal:docs content="python:view.get_stats_for('photos')">
              240
            </tal:docs>
          </div>
        </div>
        <p i18n:translate="Photos">
          Photos
        </p>
      </li>
    </ul>

    <ul class="nav nav-pills nav-stacked"
        tal:condition="not: is_community">
      <li>
        <div class="bubble left pull-left">
          <div class="arrow"></div>
          <div class="bubble-content">
            <tal:docs content="python:view.get_all_activities()">
              240
            </tal:docs>
          </div>
        </div>
        <p i18n:translate="Activity">
          Activitat
        </p>
      </li>
      <li>
        <div class="bubble left pull-left">
          <div class="arrow"></div>
          <div class="bubble-content">
            <tal:docs content="python:view.get_all_comments()">
              240
            </tal:docs>
          </div>
        </div>
        <p i18n:translate="Comments">
          Comentaris
        </p>
      </li>
    </ul>

</div>
</tal:iscommunity>
