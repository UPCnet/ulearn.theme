<tal:thinnkers tal:define="is_community view/community_mode"
               i18n:domain="ulearn">
<tal:iscommunity condition="is_community">
<div id="box_thinkers" class="ulearnbox"
     tal:define="community view/get_community;
                 community_hash python:view.get_hash(community)">

      <div class="osomcorner-wrapper"><div class="osomcorner"></div></div>

      <h2 i18n:translate="" tal:content="view/get_people_literal">
        Thinnkers
      </h2>
      <div id="miniatures">
        <lastauthors type="context" community_hash="${community_hash}" ng-cloak>
          <div class="thinnker">
            <a ng-repeat="author in last_authors"
               title="{{author.displayName}}"
               ng-href="{{portal_url}}/profile/{{author.username}}">
               <img alt="User"
                    ng-src="{{portal_url}}/@@avatar/{{author.username}}" />
            </a>
          </div>
        </lastauthors>
      </div>
      <div id="searchinputusers">
        <div class="input-append inputsearchUsers">
          <form action="searchUsers" method="get" id="searchusers" input="search">
            <input id="search" name="search" class="searchInput" type="text" placeholder="Cerca" i18n:attributes="placeholder search_users">
            <span class="add-on"><button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button></span>
          </form>
        </div>
      </div>
</div>
</tal:iscommunity>

<tal:isprofile condition="not:is_community">
<div id="box_thinkers" class="ulearnbox">

      <div class="osomcorner-wrapper"><div class="osomcorner"></div></div>

      <h2 i18n:translate="" tal:content="view/get_people_literal">
        Thinnkers
      </h2>
      <div id="miniatures">
        <lastauthors type="timeline" ng-cloak>
          <div class="thinnker" ng-repeat="author in last_authors">
            <a title="{{author.displayName}}"
               ng-href="{{portal_url}}/profile/{{author.username}}">
               <img alt="User"
                    ng-src="{{portal_url}}/@@avatar/{{author.username}}" />
            </a>
          </div>
        </lastauthors>
      </div>
      <div id="searchinputusers">
        <div class="input-append inputsearchUsers">
          <form action="searchUsers" method="get" id="searchusers" input="search">
            <input id="search" name="search" class="searchInput" type="text" placeholder="Cerca" i18n:attributes="placeholder search_users">
            <span class="add-on"><button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button></span>
          </form>
        </div>
      </div>
</div>
</tal:isprofile>
</tal:thinnkers>
