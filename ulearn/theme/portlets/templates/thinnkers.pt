<tal:thinnkers tal:define="is_community view/community_mode"
               i18n:domain="ulearn">
<div id="box_thinkers" class="ulearnbox"
     tal:condition="is_community"
     tal:define="community view/get_community">

      <div class="osomcorner-wrapper"><div class="osomcorner"></div></div>

      <h2 i18n:translate="" tal:content="view/get_people_literal">
        Thinnkers
      </h2>
      <div id="miniatures">
        <tal:loop repeat="thinnker python:view.get_thinnkers(community=community)">
          <div class="thinnker">
            <a href="#" rel="tooltip" data-placement="bottom"
               tal:attributes="title thinnker/displayName;
                               href string:${view/portal_url}/profile/${thinnker/username}">
              <img alt="User"
                   tal:attributes="src string:${view/portal_url}/@@avatar/${thinnker/username}">
            </a>
          </div>
        </tal:loop>
      </div>
      <ul class="userslinks"
        tal:define="community view/get_community">
        <li>
          <a tal:attributes="href string:${community/absolute_url}/searchUsers">
            <i class="icon-plus-sign icons"> </i>
            <tal:seemore i18n:translate="seemoreusers">See more users</tal:seemore>
          </a>
        </li>
      </ul>
</div>

<div id="box_thinkers" class="ulearnbox"
     tal:condition="not: is_community">

      <div class="osomcorner-wrapper"><div class="osomcorner"></div></div>

      <h2 i18n:translate="" tal:content="view/get_people_literal">
        Thinnkers
      </h2>
      <div id="miniatures">
        <tal:loop repeat="thinnker python:view.get_thinnkers()">
          <div class="thinnker">
            <a href="#" rel="tooltip" data-placement="bottom"
               tal:attributes="title thinnker/displayName;
                               href string:${view/portal_url}/profile/${thinnker/username}">
              <img alt="User"
                   tal:attributes="src string:${view/portal_url}/@@avatar/${thinnker/username}">
            </a>
          </div>
        </tal:loop>
      </div>
      <ul class="userslinks">
        <li>
          <a tal:attributes="href string:${view/portal_url}/searchUsers">
            <i class="icon-plus-sign icons"> </i>
            <tal:seemore i18n:translate="seemoreusers">See more users</tal:seemore>
          </a>
        </li>
      </ul>
</div>
</tal:thinnkers>
