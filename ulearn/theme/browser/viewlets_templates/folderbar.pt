<div id="menusup"
     tal:define="community viewlet/get_community"
     tal:condition="viewlet/render_viewlet"
     i18n:domain="ulearn">
  <ul class="nav nav-tabs" id="community-views">
    <li tal:attributes="class python:'active' if viewlet.folder_type == 'community' else ''">
      <a href="#"
         tal:attributes="href string:${community/absolute_url}">
            <i class="fa-icon-comment icons"></i>
            <tal:Activity i18n:translate="Activity">Activitat</tal:Activity></a></li>
    <li tal:attributes="class python:'active' if viewlet.folder_type == 'documents' else ''">
      <a href="#"
           tal:attributes="href string:${community/absolute_url}/documents">
              <i class="fa-icon-file-alt icons"></i>
              <tal:Documents i18n:translate="Documents">Documents</tal:Documents></a></li>
    <li tal:attributes="class python:'active' if viewlet.folder_type == 'links' else ''">
      <a href="#"
           tal:attributes="href string:${community/absolute_url}/enllacos">
              <i class="fa-icon-link icons"></i>
              <tal:Links i18n:translate="Links">Enllaços</tal:Links></a></li>
    <li tal:attributes="class python:'active' if viewlet.folder_type == 'photos' else ''">
      <a href="#"
           tal:attributes="href string:${community/absolute_url}/fotos">
              <i class="fa-icon-camera-retro icons"></i>
              <tal:Photos i18n:translate="Photos">Fotos</tal:Photos></a></li>
    <li class="btn-plus dropdown pull-right">
        <a class="dropdown-toggle" role="menuitem" data-toggle="dropdown" href="#">
          <i class="fa-icon-plus icons"></i>
        </a>
        <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dropdownMenu">
          <li><a role="menuitem" tabindex="-1" tal:attributes="href string:${context/absolute_url}/documents/++add++Document"><i class="icon-document"></i> Página</a></li>
          <li><a role="menuitem" tabindex="-1" tal:attributes="href string:${context/absolute_url}/documents/++add++File"><i class="icon-file"></i> Fichero</a></li>
          <li><a role="menuitem" tabindex="-1" tal:attributes="href string:${context/absolute_url}/enllacos/++add++Link"><i class="icon-link"></i> Enlace</a></li>
          <li><a role="menuitem" tabindex="-1" tal:attributes="href string:${context/absolute_url}/fotos/++add++Image"><i class="icon-image"></i> Foto</a></li>
        </ul>
    </li>
  </ul>
</div>
