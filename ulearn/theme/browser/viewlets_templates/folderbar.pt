<div id="menusup"
     tal:define="community viewlet/get_community"
     tal:condition="viewlet/render_viewlet"
     i18n:domain="ulearn">
  <nav>
    <div class="row-fluid">

      <div class="active bubble top"
           tal:attributes="class python: viewlet.bubble_class('community')">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
             tal:attributes="href string:${community/absolute_url}">
                <i class="fa fa-comment icons"></i>
                <tal:Activity i18n:translate="Activity">Activitat</tal:Activity></a>
        </div>
      </div>

      <div class="bubble top"
           tal:attributes="class python: viewlet.bubble_class('documents')">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
               tal:attributes="href string:${community/absolute_url}/documents">
                  <i class="fa fa-file-text-o icons"></i>
                  <tal:Documents i18n:translate="Documents">Documents</tal:Documents></a>
        </div>
      </div>

      <div class="bubble top"
           tal:attributes="class python: viewlet.bubble_class('links')">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
               tal:attributes="href string:${community/absolute_url}/links">
                  <i class="fa fa-link icons"></i>
                  <tal:Links i18n:translate="Links">Enlla√ßos</tal:Links></a>
        </div>
      </div>

      <div class="bubble top"
           tal:attributes="class python: viewlet.bubble_class('photos')">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
               tal:attributes="href string:${community/absolute_url}/media">
                  <i class="fa fa-camera-retro icons"></i>
                  <tal:Media i18n:translate="Media">Media</tal:Media></a>
        </div>
      </div>

      <tal:isEventFolder condition="python: viewlet.folder_type == 'events'">
      <div class="bubble top"
           tal:attributes="class python: viewlet.bubble_class('events')">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
               tal:attributes="href string:${community/absolute_url}/events">
                  <i class="fa fa-calendar icons"></i>
                  <tal:Photos i18n:translate="Events">Esdeveniments</tal:Photos></a>
        </div>
      </div>
      </tal:isEventFolder>

    </div>
  </nav>
</div>
