<div id="menusup"
     tal:define="community viewlet/get_community"
     tal:condition="viewlet/render_viewlet"
     i18n:domain="ulearn">
  <nav>
    <div class="row-fluid">

      <div class="active bubble top"
           tal:attributes="class python:'active bubble top span3' if viewlet.folder_type == 'community' else 'bubble top span3'">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
             tal:attributes="href string:${community/absolute_url}">
                <i class="fa-icon-comment icons"></i>
                <tal:Activity i18n:translate="Activity">Activitat</tal:Activity></a>
        </div>
      </div>

      <div class="bubble top"
           tal:attributes="class python:'active bubble top span3' if viewlet.folder_type == 'documents' else 'bubble top span3'">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
               tal:attributes="href string:${community/absolute_url}/documents">
                  <i class="fa-icon-file-alt icons"></i>
                  <tal:Documents i18n:translate="Documents">Documents</tal:Documents></a>
        </div>
      </div>

      <div class="bubble top"
           tal:attributes="class python:'active bubble top span3' if viewlet.folder_type == 'links' else 'bubble top span3'">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
               tal:attributes="href string:${community/absolute_url}/enllacos">
                  <i class="fa-icon-link icons"></i>
                  <tal:Links i18n:translate="Links">Enlla√ßos</tal:Links></a>
        </div>
      </div>

      <div class="bubble top"
           tal:attributes="class python:'active bubble top span3' if viewlet.folder_type == 'photos' else 'bubble top span3'">
        <div class="arrow"></div>
        <div class="bubble-content">
          <a href="#"
               tal:attributes="href string:${community/absolute_url}/fotos">
                  <i class="fa-icon-camera-retro icons"></i>
                  <tal:Photos i18n:translate="Photos">Fotos</tal:Photos></a>
        </div>
      </div>

    </div>
  </nav>
</div>
