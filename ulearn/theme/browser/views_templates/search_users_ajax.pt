<tal:userlist define="usersDict view/get_my_users;
                      users usersDict/content;
                      big_data usersDict/big;
                      num_users usersDict/length;
                      ">
  <tal:bigdata condition="big_data">
    <tal:llistat repeat="user users">
      <div class="directori_usuari_foto">
        <a href="" tal:attributes="href user/url" tal:content="structure user/foto">
        </a>
      </div>
    </tal:llistat>
  </tal:bigdata>
  <tal:bigdata condition="not: big_data">
    <ul class="sortablelist"
      tal:condition="users">
      <tal:llistat repeat="user users">
        <li class="mix" tal:attributes="data-name user/id">
          <div class="row-fluid">
            <div class="span3">
              <a class="photo" tal:attributes="href user/url" tal:content="structure user/foto">
              </a>
            </div>
            <div class="span9">
              <a tal:attributes="href user/url">
                <h4><span tal:replace="user/fullname">Full name</span> <span class="usuari_petit" tal:content="user/id">Id</span></h4>
              </a>
                <p class="email" tal:condition="user/email"><i class="fa fa-envelope"></i><span tal:content="user/email">Email</span></p>
                <p class="telefon" tal:condition="user/telefon"><i class="fa fa-mobile"></i><span tal:content="user/telefon">Phone</span></p>
                <p class="location" tal:condition="user/location"><i class="fa fa-building-o"></i><span tal:content="user/location">Location</span></p>
                <p class="ubicacio" tal:condition="user/ubicacio"><i class="fa fa-user"></i><span tal:content="user/ubicacio">Ubicacio</span></p>
            </div>
          </div>
        </li>
      </tal:llistat>
    </ul>
  </tal:bigdata>

  <div class="clearfix" tal:condition="big_data">
  </div>

</tal:userlist>
